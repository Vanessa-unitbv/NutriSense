<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundalflori3">

    <TextView
        android:id="@+id/tv_title_recipe_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Search"
        android:textSize="24sp"
        android:textColor="#D81B60"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/default_space"
        app:layout_constraintBottom_toTopOf="@+id/bottom_buttons_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_recipe_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@drawable/pink_button"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Recipe Search"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter ingredients to find recipes:"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., chicken, rice, tomato"
                    android:backgroundTint="#FFFFFF"
                    android:textColorHint="#F8BBD0"
                    android:textColor="#333333"
                    android:background="#FFFFFF"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:inputType="textCapWords" />

                <Button
                    android:id="@+id/btn_search_recipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Search Recipes"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    style="@null" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFCDD2"
                android:textColor="#C62828"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:background="@drawable/pink_button"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Recipe Results"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_no_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No recipes found yet. Search for ingredients to discover delicious recipes!"
                    android:textSize="14sp"
                    android:textColor="#F8BBD0"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_back_to_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Dashboard"
            android:background="@drawable/button_selector"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:minWidth="140dp"
            android:maxWidth="180dp"
            android:layout_marginEnd="8dp"
            style="@null" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Logout"
            android:background="@drawable/button_selector"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:minWidth="140dp"
            android:maxWidth="180dp"
            android:layout_marginStart="8dp"
            style="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>